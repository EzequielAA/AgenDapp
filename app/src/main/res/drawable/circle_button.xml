<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#3700B3"/> <!-- color oscuro al presionar -->
            <size android:width="56dp" android:height="56dp"/>
            <stroke android:width="2dp" android:color="#6200EE"/>
        </shape>
    </item>

    <!-- Estado normal -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#6200EE"/> <!-- color principal -->
            <size android:width="56dp" android:height="56dp"/>
            <stroke android:width="2dp" android:color="#3700B3"/>
        </shape>
    </item>

</selector>
